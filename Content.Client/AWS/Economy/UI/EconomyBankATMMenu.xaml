<controls:FancyWindow xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc 'economy-bank-atm-menu-title'}"
    MinSize="550 200">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="5">
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True">
            <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                <Label Text="{Loc 'economy-bank-atm-menu-account-id'}"></Label>
                <Label Text="{Loc 'economy-bank-atm-menu-account-owner'}"></Label>
                <Label Text="{Loc 'economy-bank-atm-menu-account-balance'}"></Label>
            </BoxContainer>
            <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                <Label Name="AccountIdLabel"></Label>
                <Label Name="AccountOwnerLabel"></Label>
                <Label Name="AccountBalanceLabel"></Label>
            </BoxContainer>
        </BoxContainer>
        <PanelContainer StyleClasses="LowDivider" />
        <Label Text="{Loc 'economy-bank-atm-menu-withdraw-label'}" />
        <SpinBox Name="WithdrawAmountBox"
            HorizontalExpand="True"
            Value="1" />
        <Button Name="WithdrawButton" Text="{Loc 'economy-bank-atm-menu-withdraw-button'}" HorizontalAlignment="Right" />
        <Label Name="ErrorLabel" />
    </BoxContainer>
</controls:FancyWindow>
